@model ML.SubPoliza
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>SubPoliza</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione una SubPoliza para editarlo o + para agregar un SubPoliza...</h5>
        <hr />
    </div>
</div>

<div style="float:right">
    @Html.ActionLink("+", "Form", "SubPoliza", htmlAttributes: new { @class = "btn btn-success" })
</div>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td class="text-center" style=" font-weight:bold;">Editar</td>
            <td class="hidden">IdSubPoliza</td>
            <td class="text-center" style=" font-weight:bold;">Nombre</td>


            <td class="text-center" style=" font-weight:bold;">Eliminar</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.SubPoliza subpoliza in Model.SubPolizas)
        {
            <tr>
                <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "SubPoliza", new { IdSubPoliza = subpoliza.IdSubPoliza })"></a></td>

                <td class="hidden">@subpoliza.IdSubPoliza</td>
                <td>@subpoliza.Nombre</td>


                <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "SubPoliza", new { IdSubPoliza = subpoliza.IdSubPoliza })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
            </tr>
        }
    </tbody>
</table>

